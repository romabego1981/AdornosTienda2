<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Servicios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            tools:srcCompat="@drawable/adorno1" />
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0.2dp"
            android:layout_marginBottom="0.2dp">

            <ImageView
                android:id="@+id/imgServicioBisuteria"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/servicio_bisuteria" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtServicioBisuteria"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Servicio de bisuteria. Puede solicitarlo para sus trabajos especiales" />

            </LinearLayout>

            <Button
                android:id="@+id/btnServicioBisuteria"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Info" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0.2dp"
            android:layout_marginBottom="0.2dp">

            <ImageView
                android:id="@+id/imgServicioArbol"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/servicio_arbol" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtServicioArbol"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Servicio de decoración de árboles de navidad con el motivo que elija" />

            </LinearLayout>

            <Button
                android:id="@+id/btnServicioArbol"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Info" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0.2dp"
            android:layout_marginBottom="0.2dp">

            <ImageView
                android:id="@+id/imgServicioFiestas"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/servicio_decorafiestas" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtServicioFiestas"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Decoramos sus fiestas con el motivo que nos pida" />

            </LinearLayout>

            <Button
                android:id="@+id/btnServicioFiestas"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Info" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0.2dp"
            android:layout_marginBottom="0.2dp">

            <ImageView
                android:id="@+id/imgServicioQuince"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/servicio_decoraquince" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtServicioQuince"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Decoramos la fiesta de quince para sus hijas." />

            </LinearLayout>

            <Button
                android:id="@+id/btnServicioQuince"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Info" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>